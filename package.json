{
  "name": "pomox",
  "version": "1.0.0",
  "description": "A pomodoro timer for macOS with Focus Mode integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pomox": "./bin/pomox.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "pomodoro",
    "timer",
    "focus",
    "productivity"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "commander": "^14.0.2",
    "deepmerge": "^4.3.1",
    "node-notifier": "^10.0.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/node-notifier": "^8.0.5",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
